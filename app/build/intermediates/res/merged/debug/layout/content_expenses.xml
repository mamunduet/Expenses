<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.duet.mamun.expenses.Expenses"
    tools:showIn="@layout/app_bar_expenses">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imgViewCapture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="expenseImage"
                android:layout_gravity="center"
                android:background="@null"
                android:src="@drawable/capture"/>
            <EditText
                android:id="@+id/etAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text=""
                android:hint="$0.00"
                android:gravity="end"
                android:layout_gravity="center"
                android:ems="10"
                android:inputType="numberDecimal"/>
        </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:gravity="center"
                android:text="How did you pay for it?"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:padding="3dp"
                android:orientation="horizontal">
                <CheckBox
                    android:id="@+id/chkBoxCredit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CREDIT"/>
                <CheckBox
                    android:id="@+id/chkBoxCheck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="CHECK"/>
                <CheckBox
                    android:id="@+id/chkBoxCash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="CASH"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:layout_marginTop="10dp"
                android:padding="3dp"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/etDate"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:hint="Date"
                    android:ems="10"
                    android:layout_marginLeft="5dp"
                    android:gravity="start"
                    android:inputType="date"

                    />
                <ImageView
                    android:id="@+id/imgViewCalendar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@null"
                    android:src="@drawable/calendar"/>
            </LinearLayout>
            <EditText
                android:id="@+id/etPay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:text=""
                android:inputType="text"
                android:hint="Who did you pay?"/>
            <EditText
                android:id="@+id/etExpenseName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:text=""
                android:inputType="text"
                android:hint="What kind of expense is it?"/>
            <EditText
                android:id="@+id/etMemo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:text=""
                android:inputType="textShortMessage"
                android:hint="Memo"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btnSave"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    android:layout_marginRight="10dp"
                    android:text="Save"/>
                <Button
                    android:id="@+id/btnCancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    android:layout_marginLeft="10dp"
                    android:text="Cancel"/>
            </LinearLayout>
            <TextView
                android:id="@+id/txtViewDebug"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:visibility="gone"
                android:textColor="#ff0000"
                android:text="Debug"/>
        </LinearLayout>

    </ScrollView>
</RelativeLayout>
